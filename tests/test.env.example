# Test Environment Configuration
# Copy this file to tests/test.env and update with your own test data

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
MCP_URL=http://localhost:8080/mcp
LEXICON_URL=http://localhost:8080

# =============================================================================
# FULLSTORY TEST DATA
# =============================================================================
# Replace with your own test user ID and session ID for FullStory testing
# These should be valid IDs from your FullStory organization for realistic testing
TEST_FULLSTORY_USER_ID=your_test_user_id_here
TEST_FULLSTORY_SESSION_ID=your_test_session_id_here

# Alternative test user/session for multiple user testing
TEST_FULLSTORY_USER_ID_2=your_test_user_id_2_here
TEST_FULLSTORY_SESSION_ID_2=your_test_session_id_2_here

# Test profile ID for FullStory profile operations
TEST_FULLSTORY_PROFILE_ID=your_test_profile_id_here

# =============================================================================
# BIGQUERY TEST CONFIGURATION
# =============================================================================
# Replace with your own BigQuery project, dataset, and table for testing
# Ensure the service account has appropriate read access to these resources
TEST_BIGQUERY_PROJECT_ID=your_bigquery_project_id_here
TEST_BIGQUERY_DATASET=your_test_dataset_here
TEST_BIGQUERY_TABLE=your_test_table_here

# Full database identifier for BigQuery
TEST_BIGQUERY_DATABASE=${TEST_BIGQUERY_PROJECT_ID}.${TEST_BIGQUERY_DATASET}

# =============================================================================
# SNOWFLAKE TEST CONFIGURATION (if using Snowflake)
# =============================================================================
TEST_SNOWFLAKE_DATABASE=your_snowflake_database_here
TEST_SNOWFLAKE_SCHEMA=your_snowflake_schema_here
TEST_SNOWFLAKE_TABLE=your_snowflake_table_here

# =============================================================================
# GENERIC TEST DATA
# =============================================================================
# Generic test identifiers that don't require real data
TEST_USER_ID=test_user_123
TEST_SESSION_ID=test_session_456
TEST_EMAIL=test@example.com
TEST_DISPLAY_NAME=Test User

# =============================================================================
# TEST CONFIGURATION OPTIONS
# =============================================================================
# Skip tests that require real data if set to true
SKIP_REAL_DATA_TESTS=false

# Enable verbose output for debugging
TEST_VERBOSE=false

# Test timeout in seconds
TEST_TIMEOUT=30

